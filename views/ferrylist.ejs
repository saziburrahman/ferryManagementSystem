    <script>
        let employeeList = document.getElementById('employeeList');
        let ferryList = document.getElementById('ferryList');
        let ticketInfo = document.getElementById('ticketInfo');
        let aboutInfo = document.getElementById('aboutInfo');
        let employeeRegistration = document.getElementById('employeeRegistration');
        let ferryRegistration = document.getElementById('ferryRegistration');

        function show(x) {
            if (x == 1) {
                employeeList.style.display = 'none';
                ferryList.style.display = 'none';
                ticketInfo.style.display = 'none';
                employeeRegistration.style.display = 'block';
                ferryRegistration.style.display = 'none';
            }
            if (x == 2) {
                employeeList.style.display = 'none';
                ferryList.style.display = 'none';
                ticketInfo.style.display = 'none';
                employeeRegistration.style.display = 'none';
                ferryRegistration.style.display = 'block';
            }
            if (x == 3) {
                employeeList.style.display = 'block';
                ferryList.style.display = 'none';
                ticketInfo.style.display = 'none';
                employeeRegistration.style.display = 'none';
                ferryRegistration.style.display = 'none';
            }
            if (x == 4) {
                employeeList.style.display = 'none';
                ferryList.style.display = 'block';
                ticketInfo.style.display = 'none';
                employeeRegistration.style.display = 'none';
                ferryRegistration.style.display = 'none';
            }
            if (x == 5) {
                employeeList.style.display = 'none';
                ferryList.style.display = 'none';
                ticketInfo.style.display = 'block';
                employeeRegistration.style.display = 'none';
                ferryRegistration.style.display = 'none';
            }
        }



