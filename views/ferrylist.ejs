                                                <td>
                                                    <%= i+1 %>
                                                </td>
                                                <td>
                                                    <%= ferrySchema[i].ferryName %>
                                                </td>
                                                <td>
                                                    <%= ferrySchema[i].ferryRoute %>
                                                </td>
                                                <td>
                                                    <%= ferrySchema[i].ferryTime %>
                                                </td>
                                                <td>
                                                    <%= ferrySchema[i].dateInput.toDateString() %>
                                                </td>
                                                <td><a href="/ferryEdit/<%= ferrySchema[i].id %>" class="btn btn-primary">Edit</a></td>
                                                <td><a href="/ferryDelete/<%= ferrySchema[i].id %>" class="btn btn-danger">Delete</a></td>
                                                <td><a href="/aboutFerry/<%= ferrySchema[i].id %>" class="btn btn-primary">About Fery</a></td>
